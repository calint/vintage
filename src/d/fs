#version 150 core
uniform sampler2D utx;
in vec4 pass_Color;
in vec2 pass_TextureCoord;
out vec4 out_Color;
void main(){
//	out_Color=pass_Color+texture(utx,pass_TextureCoord);
	out_Color=pass_Color;
	vec4 txrgba=texture(utx,pass_TextureCoord);
	if(txrgba.rgba==vec4(0,0,0,0))
		discard; 
	out_Color=txrgba;
}